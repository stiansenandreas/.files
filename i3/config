set $mod Mod1
floating_modifier $mod
font pango:Source Code Pro:style=Regular 10


# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# split horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v


# toggle fullscreen/tiling/floating
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle


# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"


# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4


# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4


# reload/restart/exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit?' -B 'Yes' 'i3-msg exit'"


# resize window

mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal:
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"


# window borders/gaps

# class                 border  backgr. text    indicator child_border
client.focused          #ea00d9 #285577 #ffffff #ea00d9   #ea00d9
client.focused_inactive #133e7c #5f676a #ffffff #133e7c   #133e7c
client.unfocused        #133e7c #222222 #888888 #133e7c   #133e7c

for_window [class="^.*"] border pixel 1
hide_edge_borders smart
gaps inner 20


# window rules

assign [class="firefox"] 1
for_window [class="neo"] move to workspace 2, floating enable, resize set 550 345, move position 20 67
for_window [class="terminal"] move to workspace 2, floating enable, resize set 550 628, move position 20 432
for_window [class="workspace"] move to workspace 2, floating enable, resize set 1310 993, move position 590 67
for_window [class="code-oss"] move to workspace 2, floating enable, resize set 1310 993, move position 590 67
for_window [class="Lutris"] move to workspace 3
for_window [class="Spotify"] move to workspace 4, resize set 576 0
for_window [class="discord"] move to workspace 4, resize set 1344 0


# program keybinds

bindsym $mod+Return exec termite --class=workspace
bindsym $mod+Shift+q kill
bindsym $mod+d exec "rofi -show drun"


# media keys

bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5
bindsym XF86AudioMute exec --no-startup-id pamixer -t
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous


# layout

exec --no-startup-id "i3-msg 'workspace 4; append_layout /home/andreas/.config/i3/ws4.json'"
exec --no-startup-id compton -b
exec --no-startup-id "setxkbmap -layout no"
exec --no-startup-id "feh --bg-fill ~/.config/i3/wallpaper.png"
exec --no-startup-id /home/andreas/.config/polybar/launch.sh &


# autostart

exec --no-startup-id spotify
exec --no-startup-id firefox
exec --no-startup-id discord
exec --no-startup-id lutris
exec --no-startup-id termite --class=neo -e neofetch --hold
exec --no-startup-id termite --class=terminal
